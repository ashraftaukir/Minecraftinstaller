<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Minecraft Installer"
        android:textColor="@color/primary_text"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Mascot Animation Area -->
    <ImageView
        android:id="@+id/mascot_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/mascot_background"
        android:contentDescription="Minecraft Mascot"
        android:padding="16dp"
        android:src="@drawable/ic_minecraft_block" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mascot_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Ready to install Minecraft content!"
        android:textColor="@color/secondary_text"
        android:textSize="16sp" />

    <!-- Install Button -->
    <Button
        android:id="@+id/install_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/status_text"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_primary"
        android:text="Install Minecraft Content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Retry Button (hidden by default) -->
    <Button
        android:id="@+id/retry_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/status_text"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_secondary"
        android:text="Try Again"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Info Text -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/install_button"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Supports .mcworld and .mcpack files\nSafe for kids - no ads or unwanted access"
        android:textColor="@color/hint_text"
        android:textSize="12sp" />

</RelativeLayout>